def replace_last_row_with_zeros(matrix):
    last_row_index = len(matrix) - 1
    for i in range(len(matrix[last_row_index])):
        matrix[last_row_index][i] = 0

# Пример использования:
matrix = [
    [1, 2, 3],
    [4, 5, 6],
    [7, 8, 9]
]

replace_last_row_with_zeros(matrix)
for row in matrix:
    print(row)
